# =============================================================================
# Switchline Environment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# Application Settings
NODE_ENV=production
BASE_URL=https://switchline.app
FRONTEND_URL=https://switchline.app
DOMAIN_NAME=switchline.app
ADMIN_EMAIL=admin@switchline.app

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://switchline_user:${DB_PASSWORD}@postgres:5432/switchline

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# JWT Configuration (generate with: openssl rand -base64 64)
JWT_SECRET=your_super_secure_jwt_secret_key_here_at_least_64_characters_long
JWT_EXPIRES_IN=7d

# Twilio Configuration
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Stripe Configuration  
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here
SMTP_FROM_EMAIL=noreply@switchline.app
SMTP_FROM_NAME=Switchline

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/switchline.app.crt
SSL_KEY_PATH=/etc/nginx/ssl/switchline.app.key

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/switchline.log

# =============================================================================
# Development Settings (uncomment for local development)
# =============================================================================

# NODE_ENV=development
# BASE_URL=http://localhost:3001
# FRONTEND_URL=http://localhost:3000

# =============================================================================
# Example Commands to Generate Secure Values
# =============================================================================

# Generate JWT Secret:
# openssl rand -base64 64

# Generate Database Password:
# openssl rand -base64 32

# Generate Redis Password:
# openssl rand -base64 32

# Generate Grafana Password:
# openssl rand -base64 16